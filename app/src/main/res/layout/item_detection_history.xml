<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="?attr/colorOutline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Extra large rounded image for better visibility -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_card"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Object thumbnail"
            tools:src="@drawable/ic_image_placeholder" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Object name with emoji support -->
        <TextView
            android:id="@+id/tv_object_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/confidence_badge"
            app:layout_constraintStart_toEndOf="@id/image_card"
            app:layout_constraintTop_toTopOf="@id/image_card"
            tools:text="Laptop" />

        <!-- Confidence badge with background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/confidence_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E8F5E9"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_object_name">

        <TextView
            android:id="@+id/tv_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#2E7D32"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="85%" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_card"
            app:layout_constraintTop_toBottomOf="@id/tv_object_name"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="2 hours ago" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toStartOf="@id/btn_set_reminder"
            app:layout_constraintStart_toEndOf="@id/image_card"
            app:layout_constraintTop_toBottomOf="@id/tv_timestamp"
            android:drawablePadding="6dp"
            tools:text="123 Main St, New York, NY" />

        <!-- Action buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="20dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="@id/image_card"
            app:layout_constraintEnd_toStartOf="@id/btn_set_reminder"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_set_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind"
            android:textSize="13sp"
            app:icon="@drawable/ic_notification"
            app:iconSize="18dp"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/image_card"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.Material3.Button.TonalButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
