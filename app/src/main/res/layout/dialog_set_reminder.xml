<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Set Reminder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="20dp" />

    <!-- Title Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reminder Title"
        android:layout_marginBottom="16dp"
        app:startIconDrawable="@drawable/ic_notification"
        app:startIconTint="?attr/colorPrimary"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reminder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Message Input with counter -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message (Optional)"
        android:layout_marginBottom="16dp"
        app:counterEnabled="true"
        app:counterMaxLength="200"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reminder_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date & Time Button with better design -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_datetime"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Select Date &amp; Time"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        app:icon="@drawable/ic_calendar"
        app:iconGravity="start"
        app:iconSize="24dp"
        app:cornerRadius="12dp"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutline"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Priority Section Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Priority Level"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />
    
    <Spinner
        android:id="@+id/spinner_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Recurring Section Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Repeat Options"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp" />

    <!-- Recurring Reminder with Material Switch -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/check_recurring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Recurring Reminder"
        android:layout_marginBottom="12dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
    
    <Spinner
        android:id="@+id/spinner_recurrence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:enabled="false" />

</LinearLayout>
